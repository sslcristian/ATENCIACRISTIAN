<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuBookController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Registro de Libros">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
    </Label>
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" text="Título:" />
    <TextField fx:id="txtTitle" prefHeight="40" prefWidth="300" promptText="Ingrese el título del libro" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" text="Autor:" />
    <TextField fx:id="txtAuthor" prefHeight="40" prefWidth="300" promptText="Ingrese el autor del libro" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" text="Año de publicación:" />
    <TextField fx:id="txtYear" prefHeight="40" prefWidth="300" promptText="Ingrese el año de publicación" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
    <CheckBox fx:id="chkAvailability" style="-fx-font-size: 16; -fx-text-fill: #34495e;" text="Disponible" />
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" text="ISBN:" />
    <TextField fx:id="txtISBN" prefHeight="40" prefWidth="300" promptText="Ingrese el ISBN del libro" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" />
    <Button fx:id="btnRegister" onAction="#registerBook" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Registrar Libro">
        <effect>
            <DropShadow color="#2980b9" radius="3" />
        </effect>
    </Button>
    <Button fx:id="btnImprimir" onAction="#showAvailableBooks" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="Mostrar Libros Disponibles">
        <effect>
            <DropShadow color="#27ae60" radius="3" />
        </effect>
    </Button>
    <Button fx:id="btnMenup" onAction="#goToMainMenu" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Volver al Menú Principal">
        <effect>
            <DropShadow color="#c0392b" radius="3" />
        </effect>
    </Button>
</VBox>
